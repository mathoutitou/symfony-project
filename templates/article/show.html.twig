{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}

    <a href="{{ path('article_new') }}">
        {{ 'home.index.lien2' | trans }}
    </a>

    <div class="article">
        <h1>{{ article.title }}</h1>
        <p>
            {{ article.creation | date('d/m/Y') }}
            ({{ 'article.index.maj' | trans }} : {{ article.lastUpdate | date('d/m/Y') }})
        </p>
        <p>{{ article.body }}</p>

        <a href="{{ path('article_edit', {id: article.id}) }}">
            {{ 'article.show.edit' | trans }}
        </a>

        {{ form_start(delete_form) }}
        <input type="submit" value="Supprimer"/>
        {{ form_end(delete_form) }}

    </div>
{% endblock %}
