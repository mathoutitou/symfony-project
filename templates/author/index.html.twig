{% extends 'base.html.twig' %}

{% block title %}
    {{ 'author.index.head-title' | trans }}
{% endblock %}

{% block body %}
    <h1>
        {{ 'author.index.title' | trans }}
    </h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'author.index.id' | trans }}</th>
                <th>{{ 'author.index.name' | trans }}</th>
                <th>{{ 'author.index.job' | trans }}</th>
                <th>{{ 'author.index.birth' | trans }}</th>
                <th>{{ 'author.index.actions' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td>{{ author.id }}</td>
                <td>{{ author.name }}</td>
                <td>{{ author.job }}</td>
                <td>{{ author.birth ? author.birth|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('author_show', {'id': author.id}) }}">show</a>
                    <a href="{{ path('author_edit', {'id': author.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">
                    {{ 'author.index.else' | trans }}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('author_new') }}">
        {{ 'author.index.new' | trans }}
    </a>
{% endblock %}
