{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    {% for article in articles %}
        <div class="article">
            <h2>
                <a href="{{ path('article_show', {id: article.id}) }}">{{ article.title }}</a>
            </h2>
            <p>
                {{ article.creation | date('d/m/Y') }}
                (dernière mise à jour : {{ article.lastUpdate | date('d/m/Y') }})
            </p>
            <p>{{ article.body }}</p>
        </div>
    {% endfor %}
{% endblock %}
