{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    {% for article in articles %}
        <h3>{{ article.title }}</h3>
        <p>{{ article.creation | date('d/m/Y') }} (dernière mise à jour : {{ article.lastUpdate | date('d/m/Y') }})</p>
        <p>{{ article.body }}</p>
    {% endfor %}
{% endblock %}
